<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lista_item_sel_proximas"
    android:gravity="top"
    android:layout_marginTop="50dp"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left side Thumbnail image -->

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:onClick="showImageProx">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:padding="3dip" >

            <ImageView
                android:id="@+id/lista_item_img_prox"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name" />

            -->
            <!-- City-->

            <TextView
                android:id="@+id/lista_txt_prox"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginLeft="50dip"
                android:paddingBottom="10dip"
                android:text="XXXXXXXXXXXXXXXXXXX"
                android:textColor="#040404"
                android:textSize="21sp"
                android:textStyle="bold"
                android:typeface="monospace"
                />
        </LinearLayout>
        <!-- Weather Information-->

    </LinearLayout>

    <TextView
        android:id="@+id/proxEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/thumbnail"
        android:paddingTop="15dip"
        android:text="XXXXXXXXXXXXX"
        android:textColor="#040404"
        android:textSize="15sp" />

</RelativeLayout>